{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "lib": [
            "esnext"
        ],
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "strict": true,
        "stripInternal": true,
        "target": "ESNext",
        "typeRoots": ["./node_modules/@types/", "./types", "./node_modules"],
        "types": [
            "vite/client",
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.test.ts",
        "src/test/integration/clients/**/*"
    ]
}

